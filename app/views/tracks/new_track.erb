
<% if @track.errors.any? %>
  <div>
    <strong>Some issues with your track, please fix them:</strong>
    <ul>
      <% @track.errors.full_tracks.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='well'>
  <form class='form-horizontal' method="post" action="/tracks">

      <div class='form-group'>
        <label class="col-sm-2 control-label">Title:</label>
        <div class="col-sm-10">
          <input type="text" name="song_title" value="<%= @track.song_title %>Song Title">
        </div>
      </div>
      
      <div class='form-group'>
        <label class="col-sm-2 control-label">Author:</label>
        <div class="col-sm-10">
          <input type="text" name="author" value="<%= @track.author %> User">
        </div>
      </div>

      <div class='form-group'>
        <label class="col-sm-2 control-label">Url:</label>
        <div class='col-md-10'>
          <input type="text" name="url" value="<% @track.url %> Url">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
           <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>

  </form>
</div>